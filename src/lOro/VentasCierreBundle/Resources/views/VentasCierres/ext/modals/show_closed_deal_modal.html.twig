<div class="modal fade" id="showClosedDealModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body" id="body-modal-ver-cierres-dia">

        <table class="table table-bordered table-striped" id="table-show-closed-deals">
          <colgroup>
            <col class="col-xs-offset-2">
            <col class="col-xs-10">
          </colgroup>
          <thead></thead>
          <tbody>
            <tr>
              <td class="text-right">Fecha</td>
              <td id="closed-deal-date"></td>
            </tr>
            {% if app.request.attributes.get('_route_params')['lugar']  == 'hc' %}
            <tr>
              <td class="text-right">Cliente</td>
              <td id="cliente"></td>
            </tr>
            <tr>
              <td class="text-right">Divisa del Cierre</td>
              <td id="closed-deal-fcurrency-hc"></td>
            </tr>  
            {% endif %} 
            <tr>
              <td class="text-right">Descuento Onza del Proveedor (%)</td>
              <td id="descuento-onza-proveedor"></td>
            </tr>
            {% if app.request.attributes.get('_route_params')['lugar']  == 'proveedores' %}
            <tr>
              <td class="text-right">Descuento Onza del Cliente (%)</td>
              <td id="descuento-onza-cliente"></td>
            </tr>
            {% endif %}
            <tr>
              <td class="text-right">Total Cerrado (Gramos)</td>
              <td id="closed-deal-grams"></td>
            </tr>
            <tr>
              <td class="text-right">Valor de la Onza</td>
              <td id="closed-deal-oz"></td>
            </tr>
            {% if app.request.attributes.get('_route_params')['lugar']  == 'proveedores' %}
            <tr id="referencia-divisa-diaria-wrap">
              <td class="text-right">Dolar de Referencia del Dia</td>
              <td id="closed-deal-fcurrency-daily-ref"></td>
            </tr>
            {% endif %}
            {% if app.request.attributes.get('_route_params')['lugar']  == 'hc' %}
            <tr>
              <td class="text-right">Monto Total en Divisa</td>
              <td id="closed-calc-fcurrency-total"></td>
            </tr>
            {% endif %}
            {% if app.request.attributes.get('_route_params')['lugar']  == 'proveedores' %}
            <tr>
              <td class="text-right">Monto Pagado</td>
              <td id="closed-closed-deal-bs-payed"></td>
            </tr>
            <tr>
              <td class="text-right">Proveedor</td>
              <td id="closed-supplier"></td>
            </tr>
            {% endif %}          
          </tbody>
        </table>
        <div class="text-center" id="loading-square-closed-deals-show">
          <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
          <span class="sr-only">Loading...</span>
        </div>  
        
      </div>
      <div class="modal-footer">
        <a href="#" id="closed-deal-edit-button" class="btn btn-primary">Editar</a>
        <a href="#" id="closed-deal-delete-button" class="btn btn-danger">Eliminar</a>
      </div>
    </div> 
  </div>
</div>