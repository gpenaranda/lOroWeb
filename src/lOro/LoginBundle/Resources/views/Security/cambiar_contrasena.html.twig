{% extends '::gen_base.html.twig' %}
{% block title %}Cambio de Contrase√±a{% endblock %}
  {% block stylesheets %}
  <style type="text/css">
  .form-control-feedback {
    top: 22px !important;
    right: 5px !important;
  }
  </style>
{% endblock %}
{% block body %}
  <div class="page-header">
    <h1>Seguridad<small>Cambio de Contrase&ntilde;a</small></h1>
  </div>
  <div class="clearfix"></div>

  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-offset-1 col-lg-10">
      <!-- LLamado del twig con los flash del sistema -->
      {% include '::VariosSistema/mensajes_flash.html.twig' %}

      <div class="clearfix"></div>
    
      <div class="col-md-12">
      {{ form_start(form) }}
        <div style="margin-left: 210px;" class="row">
          <div class="col-lg-4">
            {{ form_label(form.password.first) }}
            {{ form_widget(form.password.first) }}
            <div id="errorContrasena" style="margin-top:5px;">{{ form_errors(form.password.first) }}</div>       
          </div>
          <div class="col-lg-4">
            {{ form_label(form.password.second) }}  
            {{ form_widget(form.password.second) }}
            {{ form_errors(form.password.second) }}
          </div>
        </div>
        <div class="row">
          <div style="margin-top: 10px;" class="col-xs-12 col-sm-12 col-md-9">
            {{ form_widget(form.submit) }}
          </div>
        </div>            
      {{ form_end(form) }}
      </div>
    </div> 
  </div>
  <div class="clearfix"></div>
{% endblock body %}

{% block javascripts %}
  <script>
  var _globales = {
    formId: 'cambia-contrasena-form',
  };
  </script>

  {% javascripts  'assets/self/js/seguridad/cambia_contrasena_val.js' filter='?uglifyjs2' output='js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
  </script>
{% endblock javascripts %}