{% extends '::gen_base.html.twig' %}
{% block title %}Administraci&oacute;n - Empresas Casa{% endblock %}
{% block body -%}
<div class="page-header">
  <h1>Empresa Casa<small>Listado</small>
  </h1>
</div>


  <div class="clearfix"></div>
  
  <div class="row">
    <!-- LLamado del twig con los flash del sistema -->
    {% include '::VariosSistema/mensajes_flash.html.twig' %}

    <div class="clearfix"></div>


    <div class="col-sm-12 col-md-12 col-lg-offset-1 col-lg-10 col-xs-12">
      <a href="{{ path('empresas-casa_new') }}" style="float:right;" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Agregar</a>
    </div>  


    <div class="col-sm-12 col-md-12 col-lg-offset-1 col-lg-10">
      <table id="listado-cierres" class="table table-striped table-condensed dt-responsive nowrap" cellspacing="0" width="100%" >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre de la Empresa</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>              
                    <td>{{ entity.nombreEmpresa }}</td>  
                    <td>
                      <a title="Ver" style="text-decoration: none;" href="{{ path('empresas-proveedores_show', { 'id': entity.id }) }}">
                          <i class="fa fa-eye fa-4" aria-hidden="true"></i>
                      </a>
                      <a title="Ver" style="text-decoration: none;" href="{{ path('empresas-proveedores_edit', { 'id': entity.id }) }}">
                          <i class="fa fa-edit fa-4" aria-hidden="true"></i>
                      </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script>
    var _globales = {
        titulosNoFiltrados: '[0,1,2]',
        idListado: 'listado-cierres',
        urlDatatableLang: '{{ asset('lang.txt') }}'
  };
  </script>

  {% javascripts  'assets/self/js/general/general_functions.js' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %} 
{% endblock %}
